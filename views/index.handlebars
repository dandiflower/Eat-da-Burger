<h1>Eat-da-burgers!</h1>
<img src="/assets/img/burger.png" alt="burger">


<div class="row">
  <h2>Burgers that are not devoured!</h2>
  <div class="col-sm-6">
    <ul>
      {{#each burgers}}
         {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <h2>Burgers that are devoured!</h2>
  <div class="col-sm-6">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
